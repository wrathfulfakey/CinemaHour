@model CinemaHour.Web.ViewModels.Genres.DetailsGenreViewModel
@{
    this.ViewData["Title"] = "Genre Details";
}

<h1 class="display-4 text-center">@Model.Name Movies</h1>
<p>
    @if (this.User.IsInRole("Administrator"))
    {
        <h6 align="center"><a asp-action="Edit" asp-route-id="@Model.Id">Edit Genre</a></h6>
        <br />
        <h6 align="center"><a asp-action="Delete" asp-route-id="@Model.Id" onclick="confirmDelete()">Delete Genre</a></h6>
        <br />
        <h6 align="center"><a asp-action="HardDelete" asp-route-id="@Model.Id" onclick="confirmHardDelete()">Hard Delete Genre</a></h6>
    }
</p>
<hr />
<div class="col-md-12 media">
    <div class="media-body">
        <div class="row">
            @foreach (var movie in Model.Movies)
            {
                <div class="col-md-3">
                    <h4 align="center"><a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">@movie.Name</a></h4>
                    <img src="@movie.PosterUrl" alt="moviePoster" width="220" class="center" />
                    <p><strong>Rating: </strong>@movie.Rating</p>
                    <p><strong>Summary :</strong>@movie.ShortSummary</p>
                </div>
            }
        </div>
    </div>
</div>

<div class="wrapper" style="margin-top:5px">
    <ul class="pager justify-content-center">
        @if (this.Model.CurrentPage <= 1)
        {
            <li class="pager__item pager__item--prev disabled">
                <a class="pager__link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12">
                        <g fill="none" fill-rule="evenodd">
                            <path fill="#33313C" d="M7.41 1.41L6 0 0 6l6 6 1.41-1.41L2.83 6z"></path>
                        </g>
                    </svg>
                </a>
            </li>
        }
        else
        {
            <li class="pager__item pager__item--prev">
                <a class="pager__link"
                   asp-action="All"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-page="@(Model.CurrentPage - 1)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12">
                        <g fill="none" fill-rule="evenodd">
                            <path fill="#33313C" d="M7.41 1.41L6 0 0 6l6 6 1.41-1.41L2.83 6z"></path>
                        </g>
                    </svg>
                </a>
            </li>
        }

        @{
            const int MorePagesToShow = 3;
            var pagesToShow = new List<int>();
            for (var i = 1; i <= MorePagesToShow; i++)
            {
                pagesToShow.Add(i);
            }
            for (var i = this.Model.CurrentPage - MorePagesToShow; i <= this.Model.CurrentPage + MorePagesToShow; i++)
            {
                if (i > 0)
                {
                    pagesToShow.Add(i);
                }
            }
            for (var i = this.Model.PagesCount - MorePagesToShow + 1; i <= this.Model.PagesCount; i++)
            {
                if (i > 0)
                {
                    pagesToShow.Add(i);
                }
            }
            pagesToShow = pagesToShow.Where(x => x <= this.Model.PagesCount).Distinct().OrderBy(x => x).ToList();
        }
        @for (var i = 0; i < pagesToShow.Count; i++)
        {
            var active = i + 1 == this.Model.CurrentPage ? "active" : string.Empty;
            var pageNumber = pagesToShow[i];

            if (i > 0 && pageNumber - 1 != pagesToShow[i - 1])
            {
                <li class="pager__item @active">
                    <a class="pager__link" asp-action="All"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-page="@(pagesToShow[i - 1] + 1)">...</a>
                </li>
            }
            <li class="pager__item @active">
                <a class="pager__link"
                   asp-action="Details"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-page="@pageNumber">@pageNumber</a>
            </li>
        }
        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="pager__item pager__item--next disabled">
                <a class="pager__link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12">
                        <g fill="none" fill-rule="evenodd">
                            <path fill="#33313C" d="M7.41 1.41L6 0 0 6l6 6 1.41-1.41L2.83 6z"></path>
                        </g>
                    </svg>
                </a>
            </li>
        }
        else
        {
            <li class="pager__item pager__item--next">
                <a class="pager__link"
                   asp-action="All"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-page="@(Model.CurrentPage + 1) ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12">
                        <g fill="none" fill-rule="evenodd">
                            <path fill="#33313C" d="M7.41 1.41L6 0 0 6l6 6 1.41-1.41L2.83 6z"></path>
                        </g>
                    </svg>
                </a>
            </li>
        }
    </ul>
</div>

<script>
    function confirmDelete() {
        confirm("Are you sure you want to delete this movie?");
    }
    function confirmHardDelete() {
        confirm("Are you sure you want to hard delete this movie?");
    }
</script>